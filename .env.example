# ============================================
# LLM Configuration
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DIMENSION=768

# ============================================
# Vector Database (Milvus)
# ============================================
MILVUS_HOST=localhost
MILVUS_PORT=19530
MILVUS_USER=root
MILVUS_PASSWORD=Milvus
MILVUS_COLLECTION_NAME=technical_reports

# ============================================
# Lexical Search (Elasticsearch)
# ============================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USER=elastic
ELASTICSEARCH_PASSWORD=changeme
ELASTICSEARCH_INDEX_NAME=technical_reports

# ============================================
# Hybrid Search Configuration
# ============================================
RRF_K_CONSTANT=60
SEMANTIC_WEIGHT=0.5
LEXICAL_WEIGHT=0.5
TOP_K_RESULTS=5

# ============================================
# PostgreSQL (Cloud SQL with pgvector)
# ============================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=rag_system
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_POOL_SIZE=10

# ============================================
# Snowflake Data Warehouse
# ============================================
SNOWFLAKE_ACCOUNT=your_account.region
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=RAG_ANALYTICS
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# ============================================
# GCP Configuration
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_CLOUD_SQL_INSTANCE=your-instance-name
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================
# Chunking Strategy
# ============================================
CHUNK_SIZE=512
CHUNK_OVERLAP=100
PARENT_CHUNK_SIZE=2048
SEMANTIC_SIMILARITY_THRESHOLD=0.6

# ============================================
# LangGraph Configuration
# ============================================
MAX_ITERATIONS=3
RELEVANCE_THRESHOLD=0.7
HALLUCINATION_CHECK_ENABLED=true

# ============================================
# API Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=["http://localhost:3000"]
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
RATE_LIMIT_PER_MINUTE=60

# ============================================
# Observability
# ============================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
GRAFANA_ENDPOINT=http://localhost:3000
ENABLE_TRACING=true
ENABLE_METRICS=true
LOG_LEVEL=INFO

# ============================================
# Storage
# ============================================
DOCUMENT_STORAGE_PATH=/data/documents
TEMP_UPLOAD_PATH=/tmp/uploads
MAX_UPLOAD_SIZE_MB=50

# ============================================
# Feature Flags
# ============================================
ENABLE_WEB_SEARCH=false
ENABLE_QUERY_EXPANSION=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
